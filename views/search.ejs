<% include header %>
    <link rel="stylesheet" type="text/css" href="css/pikaday.css">
  </head>
  <body class="fixed">
    <div class="wrapper">
      <!-- Navbar-->
      <header class="main-header hidden-print"><a class="logo" href="/"><%= appName %></a>
        <nav class="navbar navbar-static-top">
          <!-- Sidebar toggle button-->
          <label class="sidebar-toggle" title="Afficher/Masquer la barre latérale" for="toggle-sidebar"></label>
          <!-- Navbar Right Menu-->
          <div class="navbar-custom-menu">
            <ul class="top-nav">
              <li>
                <a href="/cart" title="Voir le panier">
                  <i class="fa fa-shopping-cart fa-lg"></i><span class="badge"><%=cart.count%></span></i>
                </a>
              </li>
              <!-- User Menu-->
              <li class="dropdown">
                <a class="dropdown-toggle" href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user fa-lg"></i></a>
                <ul class="dropdown-menu settings-menu">
                  <li><a href="/logout"><i class="fa fa-sign-out fa-lg"></i> Se déconnecter</a></li>
                </ul>
              </li>
            </ul>
          </div>
        </nav>
      </header>
      <!-- Side-Nav-->
      <input id="toggle-sidebar" type="checkbox">
      <aside class="main-sidebar hidden-print">
        <section class="sidebar">
          <!-- Sidebar Menu-->
          <ul class="sidebar-menu">
            <li><a href="/"><i class="fa fa-dashboard"></i><span>Tableau de bord</span></a></li>
            <li class="active"><a href="/search"><i class="fa fa-search-plus"></i><span>Recherche avancée</span></a></li>
            <li><a href="/add"><i class="fa fa-edit"></i><span>Ajouter un article</span></a> </li>
            <li><a href="/sales"><i class="fa fa-th-list"></i><span>Ventes</span></a></li>
            <li> <hr style="width:80%"> </li>
            <li><a href="/list"><i class="fa fa-file-text"></i><span>Articles</span></a></li>
            <li><a href="/zero"><i class="fa fa-repeat"></i><span>À renouveler</span></a></li>
            <li><a href="/ordered"><i class="fa fa-truck"></i><span>Commandés, en attente</span></a></li>
            <li><a href="/bestsales"><i class="fa fa-line-chart"></i><span>Meilleures ventes</span></a></li>
            <li><a href="/stats"><i class="fa fa-pie-chart"></i><span>Statistiques</span></a></li>
            <li><a href="/advanced"><i class="fa fa-laptop"></i><span>Avancé…</span></a></li>
          </ul>
        </section>
      </aside>
      <div class="content-wrapper">
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <div class="card">
              <h3 class="card-title">Chercher un article</h3>
              <form class="form-horizontal" method="get" action="/dosearch">
                  <div class="card-body">
                      <div class="row">
                          <div class="col-md-6">
                              <div class="form-group">
                                  <label class="control-label col-md-3" for="type">Type</label>
                                  <div class="col-md-8">
                                      <select class="form-control" name="type" id="type">
                                          <option value="">--ignorer--</option>
                                          <option value="book">Livre</option>
                                          <option value="game">Jeu</option>
                                          <option value="postcard">Carte postale</option>
                                          <option value="stationery">Papeterie</option>
                                          <option value="unknown">Inconnu</option>
                                      </select>
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="control-label col-md-3" for="isbn">ISBN</label>
                                  <div class="col-md-8">
                                      <input class="form-control" type="text" id="isbn" name="isbn" maxlength="13">
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="control-label col-md-3" for="author">Auteur</label>
                                  <div class="col-md-8">
                                      <input class="form-control" type="text" id="author" name="author">
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="control-label col-md-3" for="title">Titre</label>
                                  <div class="col-md-8">
                                      <input class="form-control" type="text" id="title" name="title">
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="control-label col-md-3" for="publisher">Éditeur</label>
                                  <div class="col-md-8">
                                      <input class="form-control" type="text" id="publisher" name="publisher">
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="control-label col-md-3" for="distributor">Distributeur</label>
                                  <div class="col-md-8">
                                      <input class="form-control" type="text" id="distributor" name="distributor">
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="control-label col-md-3" for="keywords">Mots-clés</label>
                                  <div class="col-md-8">
                                      <input class="form-control" type="text" id="keywords" name="keywords">
                                  </div>
                              </div>
                            </div>
                            <div class="col-md-6">
                              <div class="form-group">
                                  <label class="control-label col-md-3" for="datebought">Date d'achat</label>
                                  <div class="col-md-8">
                                      <input class="form-control" type="text" id="datebought" name="datebought" maxlength="10">
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="control-label col-md-3" for="comments">Commentaires</label>
                                  <div class="col-md-8">
                                      <textarea class="form-control" type="text" id="comments" name="comments"></textarea>
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="control-label col-md-3" for="prix_achat">Prix d'achat</label>
                                  <div class="col-md-8">
                                      <input class="form-control" type="text" id="prix_achat" name="prix_achat">
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="control-label col-md-3" for="price">Prix de vente</label>
                                  <div class="col-md-8">
                                      <input class="form-control" type="text" id="price" name="price">
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="control-label col-md-3" for="amount">Quantité</label>
                                  <div class="col-md-8">
                                      <input class="form-control" type="text" id="amount" name="amount">
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="control-label col-md-3" for="tva">TVA</label>
                                  <div class="col-md-8">
                                      <select class="form-control" name="tva" id="tva">
                                          <option value="">--ignorer--</option>
                                          <option value="20">20%</option>
                                          <option value="5.5">5.5%</option>
                                          <option value="2.1">2.1%</option>
                                          <option value="0">0%</option>
                                      </select>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>
                  <div class="card-footer">
                      <div class="row">
                          <div class="col-md-3 pull-right">
                              <button class="btn btn-primary icon-btn" type="submit">
                                  <i class="fa fa-search"></i> Rechercher
                              </button>
                          </div>
                      </div>
                  </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Javascripts-->
    <script type="text/javascript" src="/js/lib/bootstrap-native.min.js"></script>
    <script src="/js/lib/pikaday.min.js"></script>
    <script src="js/main.js?v=2"></script>
    <script type="text/javascript">
        datepicker('datebought');
    </script>
  </body>
</html>
